<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_700"
    tools:context=".AddCard">

    <ImageView
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:id="@+id/cross"
        android:src="@drawable/cross"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />



    <EditText
        android:id="@+id/userQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="84dp"
        android:ems="10"
        android:hint="Enter the question"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/userAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userQuestion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:hint="Enter the answer"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/wrongAnswer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userAnswer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:hint="Enter the wrong answer"
        android:textColor="#000000"
        android:textSize="20dp"/>


    <EditText
        android:id="@+id/wrongAnswer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wrongAnswer1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:ems="10"
        android:hint="Enter another wrong answer"
        android:textColor="#000000"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wrongAnswer2"
        android:layout_centerInParent="true"
        android:layout_marginTop="46dp"
        android:background="@color/teal_700"
        android:text="Save"></Button>



</RelativeLayout>