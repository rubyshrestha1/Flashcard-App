<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#87ceeb"
    android:id="@+id/parent"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/Question1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/rectangle"
        android:gravity="center"
        android:text="When in MLK day?"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/Answer1"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/rectangle_answer"
        android:gravity="center"
        android:text="Third Monday of January"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/Option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Question1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"
        android:background="#1338be"
        android:gravity="center"
        android:text="Third Monday of January"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/Option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Option1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:background="#1338be"
        android:gravity="center"
        android:text="Second Monday of January"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/Option3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Option2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="10dp"
        android:background="#1338be"
        android:gravity="center"
        android:text="First Monday of January"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    //for eye icon either boolean solution or two buttons


    <ImageView
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:id="@+id/plus"
        android:src="@drawable/plus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
         />
    <ImageView
        android:layout_height="40dp"
        android:layout_width="40dp"
        android:id="@+id/edit"
        android:src="@drawable/edit"
        android:layout_alignParentBottom="true"

        />



</RelativeLayout>